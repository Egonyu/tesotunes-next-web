APP_NAME=TesoTunes
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://tesotunes.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log

# Store Module Configuration
STORE_ENABLED=false
STORE_ALLOW_USER_STORES=true
STORE_FREE_TIER_FEE=7.0
STORE_PREMIUM_TIER_FEE=5.0
STORE_BUSINESS_TIER_FEE=3.0
STORE_MINIMUM_FEE=1000
STORE_ESCROW_HOLD_DAYS=7
STORE_AUTO_RELEASE_DAYS=7
STORE_PAYOUT_DAY=1
STORE_MINIMUM_PAYOUT=50000
STORE_STORAGE_DISK=digitalocean
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# DigitalOcean Spaces Configuration
DO_SPACES_ACCESS_KEY_ID=
DO_SPACES_SECRET_ACCESS_KEY=
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=
DO_SPACES_CDN_ENDPOINT=

# Music Storage Configuration
MUSIC_STORAGE_DRIVER=local
MUSIC_BACKUP_STORAGE_DRIVER=
MAX_AUDIO_FILE_SIZE=52428800
MAX_ARTWORK_FILE_SIZE=10485760
MUSIC_CDN_ENABLED=false
MUSIC_CDN_BASE_URL=
MUSIC_UPLOAD_CHUNK_SIZE=1048576
MUSIC_CONCURRENT_UPLOADS=3

# Audio Processing
MUSIC_AUTO_SUBMIT_DISTRIBUTION=false
AUTO_SCAN_EXPLICIT_CONTENT=true
REQUIRE_MANUAL_REVIEW=false

# Uganda Music Rights Organization
UMRO_API_URL=https://api.umro.ug
UMRO_API_KEY=
UMRO_ENABLED=false
ISRC_REGISTRANT_PREFIX=MUS
ISRC_AUTO_GENERATE=true

# Distribution Platforms
DISTRIBUTE_TO_SPOTIFY=true
DISTRIBUTE_TO_APPLE_MUSIC=true
DISTRIBUTE_TO_YOUTUBE_MUSIC=true
DISTRIBUTE_TO_BOOMPLAY=true
DISTRIBUTE_TO_AUDIOMACK=true

# Content Moderation
AUTO_REGISTER_UMRO=false

# Podcast Module Configuration
PODCAST_ENABLED=true
PODCAST_STORAGE_DRIVER=digitalocean
PODCAST_CDN_ENABLED=true
PODCAST_CDN_BASE_URL=
MAX_PODCAST_EPISODE_SIZE=209715200
MAX_PODCAST_ARTWORK_SIZE=10485760

# Podcast Processing
PODCAST_AUTO_TRANSCODE=true
PODCAST_AUTO_NORMALIZE=true
PODCAST_AUTO_WAVEFORM=true
PODCAST_TRANSCRIPTION_ENABLED=false
PODCAST_AUTO_TRANSCRIBE=false

# Podcast RSS & Distribution
PODCAST_RSS_TTL=60
PODCAST_APPLE_SUBMISSION=true
PODCAST_SPOTIFY_SUBMISSION=true
PODCAST_GOOGLE_SUBMISSION=true
DISTRIBUTE_PODCAST_APPLE=true
DISTRIBUTE_PODCAST_SPOTIFY=true
DISTRIBUTE_PODCAST_GOOGLE=true
DISTRIBUTE_PODCAST_YOUTUBE=true

# Podcast Freemium
PODCAST_FREE_EPISODE_LIMIT=5
PODCAST_FREE_DOWNLOAD_LIMIT=3
PODCAST_PREMIUM_PRICE=15000

# Podcast Features
PODCAST_SPONSORSHIP_ENABLED=true
PODCAST_LISTENER_SUPPORT=true
PODCAST_ALLOW_SCHEDULING=true
PODCAST_REQUIRE_REVIEW=true
PODCAST_CHAPTERS_ENABLED=true
PODCAST_COMMENTS_ENABLED=true
PODCAST_RATINGS_ENABLED=true

# Podcast Limits
PODCAST_MAX_PER_USER=10
PODCAST_MAX_EPISODES=500
PODCAST_MAX_COLLABORATORS=5

VITE_APP_NAME="${APP_NAME}"

# Google Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_ANALYTICS_ENABLED=false

# =============================================================================
# Payment Gateway Configuration
# =============================================================================

# MTN Mobile Money
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_PRIMARY_KEY=
MTN_MOMO_SECONDARY_KEY=
MTN_MOMO_CURRENCY=EUR
MTN_MOMO_TARGET_ENVIRONMENT=sandbox

# Airtel Money
AIRTEL_ENVIRONMENT=sandbox
AIRTEL_CLIENT_ID=
AIRTEL_CLIENT_SECRET=
AIRTEL_CALLBACK_URL="${APP_URL}/api/webhooks/airtel"
AIRTEL_WEBHOOK_SECRET=

# ZengaPay Configuration (Recommended - supports all Uganda networks)
# Documentation: https://developers.zengapay.com
ZENGAPAY_ENVIRONMENT=sandbox
ZENGAPAY_API_KEY=
ZENGAPAY_API_SECRET=
ZENGAPAY_WEBHOOK_SECRET=
ZENGAPAY_CALLBACK_URL="${APP_URL}/api/webhooks/zengapay"

# Default Payment Provider (auto, mtn, airtel, zengapay)
# 'auto' will detect provider from phone number
# 'zengapay' recommended as it supports all networks
PAYMENT_DEFAULT_PROVIDER=auto
PAYMENT_DEFAULT_CURRENCY=UGX
PAYMENT_MIN_AMOUNT=1000
PAYMENT_MAX_AMOUNT=10000000
