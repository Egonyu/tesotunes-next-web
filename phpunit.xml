<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         processIsolation="false"
         stopOnFailure="false"
         failOnWarning="false"
         failOnRisky="false"
         failOnEmptyTestSuite="true"
         beStrictAboutOutputDuringTests="false"
         timeoutForSmallTests="1"
         timeoutForMediumTests="10"
         timeoutForLargeTests="60">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
        <testsuite name="Payment">
            <directory>tests/Unit/Services</directory>
            <directory>tests/Feature/Payment</directory>
        </testsuite>
        <testsuite name="Music">
            <directory>tests/Feature/Music</directory>
        </testsuite>
        <testsuite name="Distribution">
            <directory>tests/Feature/Distribution</directory>
        </testsuite>
        <testsuite name="Store">
            <directory>app/Modules/Store/Tests</directory>
            <directory>tests/Unit/Services/Store</directory>
            <directory>tests/Unit/Models/Store</directory>
            <directory>tests/Feature/Store</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
        <exclude>
            <directory>app/Console</directory>
            <directory>app/Http/Middleware</directory>
            <file>app/Http/Kernel.php</file>
            <file>app/Providers/RouteServiceProvider.php</file>
        </exclude>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_URL" value="http://localhost"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <!-- DB config locked to MySQL test database - prevents flaky DB name issues -->
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_DATABASE" value="music_test"/>
        <env name="DB_HOST" value="127.0.0.1"/>
        <env name="DB_PORT" value="3306"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="PAYMENT_TESTING" value="true"/>
        <env name="DISABLE_VIRUS_SCANNING" value="true"/>
        <env name="STORAGE_FAKE" value="true"/>
        <env name="SKIP_FULLTEXT_INDEXES" value="true"/>
        <env name="STORE_ENABLED" value="true"/>
    </php>
    <coverage>
        <report>
            <html outputDirectory="tests/coverage/html"/>
            <clover outputFile="tests/coverage/clover.xml"/>
            <cobertura outputFile="tests/coverage/cobertura.xml"/>
            <text outputFile="tests/coverage/coverage.txt" showUncoveredFiles="false"/>
        </report>
    </coverage>
    <logging>
        <junit outputFile="tests/logs/junit.xml"/>
    </logging>
</phpunit>
